{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Farmitoo</h1>

    {# Todo macro #}
    <div class="container mb-3">
        <div class="card">
            <div class="card-body">
                <ul class="list-inline text-center">
                    <li class="list-inline-item">Panier</li>
                    <li class="list-inline-item">Coordonnées</li>
                    <li class="list-inline-item">Paiement</li>
                    <li class="list-inline-item">Validation</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-7 col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-primary"><i class="fas fa-shopping-cart"></i> Votre panier</span>
                            <span class="badge bg-primary rounded-pill">3</span>
                        </h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Produit</th>
                                    <th scope="col">PU</th>
                                    <th scope="col">Quantité</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td>
                                            {{ product.title }}
                                            <br>
                                            <small class="text-muted">{{ product.brand }}</small>
                                        </td>
                                        <td>{{ product.price }}€</td>
                                        <td><input type="number" step="1" min="0" value="1"></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <div class="col-md- col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td colspan="2" class="text-end fw-bold">Frais de port HT</td>
                                    <td>todo€</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-end fw-bold">Total HT</td>
                                    <td>todo€</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-end fw-bold">TVA</td>
                                    <td>todo€</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-end fw-bold">Total TTC</td>
                                    <td>todo€</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <button type="button" class="btn btn-primary">
            <i class="fas fa-caret-right"></i> Paiement
        </button>

    </div>
    
{% endblock %}
